<div class="login-box">
    <h1>Login</h1>

    <% if (message) { %>
        <p class="loginValid"><%= message %></p>
    <% } %>

    <form id="loginForm" action="/poke/login/" method="post">
        <label for="client_email">Username: </label><br>
        <input type="email" id="client_email" name="client_email">
        <br>

        <label for="password">Password:</label>
        <br>

        <input type="password" id="password" name="client_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
        <input type="submit" id="submit" name="checkbox" value="LOGIN">
        <p>No account? <a href="/poke/sign-up">Sign-up</a></p>
    </form> 
</div>
