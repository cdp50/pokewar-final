<div class="signUp-box">
    <h1>Sign-up</h1>
    
    <% if (message) { %>
        <p class="loginValid"><%= message %></p>
    <% } %>

    <form id="signUpForm"  action="/poke/sign-up/" method="post">
        <label for="client_name">Name: </label><br>
        <input type="text" id="client_firstname" name="client_firstname"><br>

        <label for="client_lastname">Lastname: </label><br>
        <input type="text" id="client_lastname" name="client_lastname"><br>

        <label for="teamsName">Your Team's name: </label><br>
        <input type="text" id="client_team" name="client_team"><br>
        
        <label for="client_email">Email: </label><br>
        <input type="email" id="client_email" name="client_email"><br>
        <br>

        <label for="password">Password:</label>
        <br>
        <input type="password" id="password" name="client_password" required pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$"><br>
        <!-- <input type="checkbox"  id="checkbox" name="checkbox" onclick="showPassword()">
        <label for="checkbox">Show Password </label><br> -->
        <input type="submit" id="submit" name="checkbox" value="Sign-up">
    </form> 
</div>